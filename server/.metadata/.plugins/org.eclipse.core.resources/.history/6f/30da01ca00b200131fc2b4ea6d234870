from flask import Flask
from flask import Response
from flask import json
from app import app

@app.route('/')
@app.route('/index')
def index():
    return "Hello, World!"

@app.route("/clouds.json")
def clouds():
  data = app.redis.lrange("clouds", 0, -1)
  resp = Response(json.dumps(data), status=200, mimetype='application/json')
  return resp